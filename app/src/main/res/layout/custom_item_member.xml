<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:weightSum="1">

    <TextView
        android:id="@+id/txtSTTMember"
        android:layout_weight="0.412"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1"
        android:textSize="20sp"
        android:textColor="@color/chinh"
        android:background="@drawable/box_custom_4" />

    <TextView
        android:id="@+id/txtNameMember1"
        android:layout_weight="0.162"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Phucs"
        android:textSize="20sp"
        android:textColor="@color/chinh"
        android:background="@drawable/box_custom_4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.426"
        android:gravity="center"
        android:background="@drawable/box_custom_4">

        <CheckBox
            android:id="@+id/cbMember"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:checked="true"
            android:minWidth="0dp"
            android:minHeight="0dp" />
    </LinearLayout>
    
</LinearLayout>